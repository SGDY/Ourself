<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.view.sg.drawview.MainActivity"
    tools:showIn="@layout/activity_main">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="10"
        android:rowCount="10">

        <Button
            android:id="@+id/button_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chronometer"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_gridlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GridLayout"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_text_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextClock"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ImageView"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ImageButton"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_quick_contact_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QuickContactBadge"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_adapter_view_flipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AdapterViewFlipper"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_stack_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StackView"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_view_switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ViewSwitcher"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_image_switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ImageSwitcher"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_text_switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextSwitcher"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_view_flipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ViewFlipper"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_search_asset_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看Assets目录下的图片"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_my_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MyViewActivity"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Path"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_text_on_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextOnPath"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_draw_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="双缓冲图片"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_pin_ball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="弹球游戏"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_matrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matrix变换"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_plane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="飞机游戏"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_touch_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缩放图片"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_rotate_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缩放图片2"
            android:textAllCaps="false" />
    </GridLayout>
</HorizontalScrollView>
